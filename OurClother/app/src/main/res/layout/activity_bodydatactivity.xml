<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.ourclother.activity.BodyDatactivity"
    android:background="@drawable/background"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toppanel"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/body"
            android:textSize="11pt"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panelBottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:text="@string/save"
            android:id="@+id/saveBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:paddingLeft="55dip"
            android:paddingRight="55dip"
            android:background="@drawable/button_style"/>

        <Button
            android:text="匹配身材"
            android:id="@+id/matchBtn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dip"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:background="@drawable/button_style"/>

    </RelativeLayout>

    <ScrollView
        android:layout_below ="@id/toppanel"
        android:layout_above="@id/panelBottom"
        android:layout_width="wrap_content"
        android:layout_height="400dip"
        android:background="@drawable/background_div"
        android:layout_margin="10dip"
        >

        <TableLayout
            android:layout_marginTop="10dp"
            android:padding="3dip"
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="身高"
                    android:textSize="30sp"
                    android:textColor="#444">

                </TextView>
                <EditText
                    android:id="@+id/text_height"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>

            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="体重"
                    android:textSize="30sp"
                    android:textColor="#444">

                </TextView>
                <EditText
                    android:id="@+id/text_weight"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="kg"/>
            </TableRow>



            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="胸围"
                    android:textSize="30sp"
                    android:textColor="#444">
                </TextView>
                <EditText
                    android:id="@+id/text_chest"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="腰围"
                    android:textSize="30sp"
                    android:textColor="#444">

                </TextView>
                <EditText
                    android:id="@+id/text_waist"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="肩宽"
                    android:textSize="30sp"
                    android:textColor="#444">
                </TextView>
                <EditText
                    android:id="@+id/text_shoulder"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="臀围"
                    android:textSize="30sp"
                    android:textColor="#444">
                </TextView>
                <EditText
                    android:id="@+id/text_hip"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:text="裤长"
                    android:textSize="30sp"
                    android:textColor="#444">
                </TextView>
                <EditText
                    android:id="@+id/text_trouser"
                    android:inputType="text"
                    android:padding="3dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="cm"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>